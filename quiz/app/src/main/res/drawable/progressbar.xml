<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FFB85F" >
            </stroke>
            <corners android:radius="2dip" />
            <gradient
                android:angle="270"
                android:centerColor="#FFFDC884"
                android:centerY="0.5"
                android:endColor="#FFFDC884"
                android:startColor="#FFFDC884" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke
                    android:width="3dp"
                    android:color="#FFB85F" >
                </stroke>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#FF7A5A"
                    android:centerY="0.5"
                    android:endColor="#FF7A5A"
                    android:startColor="#FF7A5A" />
            </shape>
        </clip>
    </item>
</layer-list>