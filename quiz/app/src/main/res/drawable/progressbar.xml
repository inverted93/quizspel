<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#462066" >
            </stroke>
            <corners android:radius="2dip" />
            <gradient
                android:angle="270"
                android:centerColor="#FFB85F"
                android:centerY="0.5"
                android:endColor="#FFB85F"
                android:startColor="#FFB85F" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#890097"
                    android:centerY="0.5"
                    android:endColor="#80ea73ff"
                    android:startColor="#7ff46aed" />
            </shape>
        </clip>
    </item>
</layer-list>