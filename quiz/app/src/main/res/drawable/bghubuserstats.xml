<?xml version="1.0" encoding="utf-8"?>

<!-- Bakgrund för textfält som visar användares stats i hubben och  -->
<!-- fältet som beskriver vad ett quiz handlar om i aktivitet Quizinfo  -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">

            <corners
                android:radius="10dp"   >
            </corners>

            <padding android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp"/>

            <stroke
                android:width="3dp"
                android:color="@color/textviewBorder" >
            </stroke>


        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">

            <solid
                android:color="@color/textviewBG" >
            </solid>
            <corners
                android:radius="7dp"   >
            </corners>

            <stroke
                android:width="3dp"
                android:color="@color/hubuserstatusBorder" >
            </stroke>


        </shape>
    </item>

</layer-list>