<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="adroit.backend.backendQuizInfo">

    <RatingBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:rating="2.0"
        android:background="@drawable/bghubuserstats"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:clickable="false"
        android:paddingBottom="100dp"
        android:textColor="#FF000000"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quizPlayedNumber"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textColor="#FF000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_marginLeft="61dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quizVoteNumber"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:textColor="#FF000000"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_marginLeft="61dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quizPlayedText"
        android:textColor="#FF000000"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_marginLeft="86dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quizVoteText"
        android:textColor="#FF000000"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_marginLeft="86dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Avrage vote"
        android:textColor="#FF000000"
        android:id="@+id/textView6"
        android:gravity="left"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quizInfoText"
        android:background="@drawable/bghubuserstats"
        android:id="@+id/textView7"
        android:textColor="#FF000000"
        android:gravity="center"
        android:linksClickable="true"
        android:longClickable="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ratingBar" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quizInfoQuizName"
        android:textStyle="bold"
        android:background="@drawable/bghubusername"
        android:textColor="@color/textviewBG"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"/>


</RelativeLayout>

